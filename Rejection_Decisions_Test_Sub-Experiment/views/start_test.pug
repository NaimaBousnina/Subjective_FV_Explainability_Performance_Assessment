    body(style='display:flex;  flex-direction: column; justify-content: space-evenly;  height: 98vh; rowbackground-color: #F8F8FF')
    
        div(class='TitleBox', id='STesttitlebox', style='margin-top: -250px;')
            h1(style='text-align: center; font-size: 2.0em;') Explainability Performance of Rejection Face Verification Decisions 
        div(class='StarTestInstBox',style='margin-top:-150px' )
            h2(style='font-size: 2.5em; margin:0.4em')
                image(src='./public/images/icons/icon_test.svg', name='icon_test', style='vertical-align: middle; width: 80px; height:auto; margin:0; margin-right: 10px; padding:0')
